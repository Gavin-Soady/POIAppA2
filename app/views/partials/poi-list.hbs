<div class="uk-margin uk-width-3xlarge uk-margin-auto uk-card uk-card-default uk-card-body uk-box-shadow-large">
  <table class="uk-table">
    <caption>
      Points of Interest from your fellow explorers
    </caption>
    <thead class="uk-text-nowrap">
      <th>Name</th>
      <th>County</th>
      <th>Weather</th>
      <th>Feels Like</th>
      <th>Category</th>
      <th>Added by</th>
      <th>Gallery</th>
      <th>Details</th>
      <th>Delete</th>

    </thead>
    <tbody class="uk-text-left">
      {{#each pois}}
        <tr>
          <td >{{name}}</td>
          <td>{{county}}</td>
          <td class="uk-text-center" ><i class="fas {{clouds}} fa-2x"></i></td>
          <td class="uk-text-center" >{{feelsLike}}Â°</td>
          <td>{{cat}}</td>
          {{#if adder.firstName}}
            <td class="uk-text-truncate" >{{adder.firstName}} {{adder.lastName}} </td>
          {{else}}
            <td >User deleted... </td>
          {{/if}}

          <td>
          <a href="/gallery/{{_id}}" style="padding-left: 0.5em;" class="uk-card uk-card-small uk-card-hover" >
            <i class="fas far fa-images fa-2x" style="color:rgb(0,155,119);"  pos="top" title="open gallery" uk-tooltip></i>
          </a>
          </td>
          <td >
            <a href='/update-poi/{{_id}}' style="padding-left: 0.5em;" class="uk-card uk-card-small uk-card-hover">
              <i  class=" fas far fa-user-edit fa-2x " style="color:rgb(0,155,119);" title="Details" uk-tooltip>
              </i>
            </a>
          </td>
          <td>
            <a href="/delete-poi/{{_id}}"  style="padding-left: 0.5em;" class="uk-card uk-card-small uk-card-hover " >
             <i class=" fas far fa-trash-alt fa-2x uk-position-relative uk-position-right " style="color:rgb(0,155,119);" title="Delete Point Of Interest" uk-tooltip>
             </i>
            </a>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>
