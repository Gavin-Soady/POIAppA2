<!-- This is a button toggling the modal -->
<button class="uk-button uk-button-default uk-margin-small-right" type="button" uk-toggle="target: #modal-example">Delete Account</button>

<!-- This is the modal -->
<div id="modal-example" uk-modal>
  <div class="uk-modal-dialog uk-modal-body">
    <h2 class="uk-modal-title">Are you sure?</h2>
    <p>Are you sure you want to delete your account?<br>
    All saved details and images will be removed permanently!</p>
    <p class="uk-text-right">
      <button class="uk-button uk-button-default uk-modal-close" type="button">Cancel</button>
      <a href = "/delete-account/{{user._id}}"><button class="uk-button uk-button-primary" type="button">Delete</button></a>
    </p>
  </div>
</div>